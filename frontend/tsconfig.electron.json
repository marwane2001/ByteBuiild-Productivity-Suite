{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/main",
    "rootDir": "./src/main",
    "module": "commonjs",
    "target": "es2020",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "src/renderer"]
}